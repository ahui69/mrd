# ========================================
# Monolit PRO - Environment Configuration
# ========================================
# Copy this file to .env and fill in your actual values

# ─────────────────────────────────────────
# Authentication
# ─────────────────────────────────────────
AUTH_TOKEN=your_secure_token_here

# ─────────────────────────────────────────
# LLM Configuration (DeepInfra or compatible)
# ─────────────────────────────────────────
LLM_BASE_URL=https://api.deepinfra.com/v1/openai
LLM_API_KEY=your_llm_api_key_here
LLM_MODEL=zai-org/GLM-4.5
LLM_HTTP_TIMEOUT_S=60

# Embedding Model
LLM_EMBED_URL=https://api.deepinfra.com/v1/openai/embeddings
LLM_EMBED_MODEL=sentence-transformers/paraphrase-multilingual-mpnet-base-v2

# ─────────────────────────────────────────
# External API Keys
# ─────────────────────────────────────────
SERPAPI_KEY=your_serpapi_key_here
FIRECRAWL_KEY=your_firecrawl_key_here
OPENTRIPMAP_KEY=your_opentripmap_key_here

# ─────────────────────────────────────────
# Paths & Storage
# ─────────────────────────────────────────
WORKSPACE=/workspace/mrd69
MEM_DB=/workspace/mrd69/mem.db

# ─────────────────────────────────────────
# HTTP Configuration
# ─────────────────────────────────────────
TIMEOUT_HTTP=60
WEB_USER_AGENT=MonolitBot/2.3
ALLOWED_ORIGINS=*
WEB_HTTP_TIMEOUT=45

# ─────────────────────────────────────────
# Autonauka Configuration
# ─────────────────────────────────────────
AUTO_TOPK=8
AUTO_FETCH=4
AUTO_MIN_CHARS=800
AUTO_MAX_CHARS=8000
AUTON_CONCURRENCY=8
AUTON_UA=Autonauka/1.0

# ─────────────────────────────────────────
# Memory Sync (optional)
# ─────────────────────────────────────────
MEM_SYNC_ENABLED=1
REMOTE_MEM_BASE_URL=
REMOTE_MEM_API_KEY=
MEM_SYNC_INTERVAL=30
MEM_SYNC_BATCH=100
MEM_SYNC_TIMEOUT=25

# ─────────────────────────────────────────
# Other URLs
# ─────────────────────────────────────────
OVERPASS_URL=https://overpass-api.de/api/interpreter
