# ================================================
# MORDZIX AI - ENVIRONMENT VARIABLES TEMPLATE
# ================================================
# Copy to .env and fill in your API keys
# ================================================

# ================== Server ==================
HOST=0.0.0.0
PORT=8080
BACKEND_PORT=8000
FRONTEND_PORT=3000

# ================== Auth ==================
AUTH_TOKEN=your_auth_token_here

# ================== LLM (primary provider) ==================
LLM_BASE_URL=https://api.deepinfra.com/v1/openai
LLM_API_KEY=your_deepinfra_key_here
LLM_MODEL=zai-org/GLM-4.5-Air
LLM_TIMEOUT=60
LLM_HTTP_TIMEOUT_S=60
LLM_RETRIES=3
LLM_BACKOFF_S=2
LLM_MAX_CONC=4
LLM_CACHE_TTL_S=300

# ================== Embeddings ==================
LLM_EMBED_URL=https://api.deepinfra.com/v1/openai/embeddings
LLM_EMBED_MODEL=sentence-transformers/paraphrase-multilingual-mpnet-base-v2
LLM_RERANK_URL=https://api.deepinfra.com/v1/rerank
LLM_RERANK_KEY=your_deepinfra_key_here

# ================== MINI LLM ==================
MINI_LLM_BASE_URL=https://api.deepinfra.com/v1/openai
MINI_LLM_API_KEY=your_deepinfra_key_here
MINI_LLM_MODEL=Qwen/Qwen2.5-4B-Instruct
MINI_LLM_TIMEOUT_S=30
USE_MINI_FOR_BG=1

# ================== OpenAI fallback ==================
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_API_KEY=your_openai_key_here

# ================== Graphics / Images ==================
STABILITY_API_KEY=your_stability_key_here
HUGGINGFACE_API_KEY=your_huggingface_key_here
REPLICATE_API_KEY=your_replicate_key_here
GRAPHICS_OUT=/var/www/mordzix/out/images

# ================== Travel / Maps ==================
GOOGLE_MAPS_KEY=your_google_maps_key_here
OPENTRIPMAP_KEY=your_opentripmap_key_here
MAPTILER_KEY=your_maptiler_key_here
TRIPADVISOR_KEY=your_tripadvisor_key_here

# ================== Database ==================
DB_PATH=/var/www/mordzix/data/monolit.db
MEMORY_DB_PATH=/var/www/mordzix/data/mem/ltm.db

# ================== Memory ==================
MEM_SYNC_ENABLED=0
LTM_MIN_SCORE=0.35
STM_MAX_TURNS=400

# ================== Paths ==================
WRITER_OUT_DIR=/var/www/mordzix/out/writing
DEV_OUT_DIR=/var/www/mordzix/out/dev
BG_QUEUE_DIR=/var/www/mordzix/queue
UPLOAD_DIR=/var/www/mordzix/data/uploads

# ================== Research ==================
SERPAPI_KEY=
FIRECRAWL_KEY=
DDG_FALLBACK=1

# ================== Misc ==================
LOG_LEVEL=INFO
USE_RUNPOD=0
